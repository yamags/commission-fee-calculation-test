{
    "name": "yama_gs/commission-task-skeleton",
    "description": "Skeleton for recruitment task",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "CommissionTask\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CommissionTask\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0",
        "ext-bcmath": "*",
        "moneyphp/money": "^3.3",
        "nesbot/carbon": "^2.46",
        "symfony/cache": "^5.2",
        "symfony/config": "^5.2",
        "symfony/console": "^5.2",
        "symfony/dotenv": "^5.2",
        "symfony/filesystem": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "friendsofphp/php-cs-fixer": "2.18"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
